---
interface Props { images?: string[]; albumUrl?: string }
const { images = [], albumUrl } = Astro.props;
const embed = albumUrl ? `${albumUrl}` : null; // some share links work in an iframe; if not, we show a button
---

{albumUrl ? (
<>
    <div class="album-embed">
        <iframe src={embed} loading="lazy" referrerpolicy="no-referrer" ></iframe>
    </div>
    <p class="fallback">
        If the album doesn’t load, <a href={albumUrl} target="_blank" rel="noopener">open it in Google Photos</a>.
    </p>
</>
    ) : (
<div class="grid">
    {images.map((src) => (
            <a class="tile" href={src} target="_blank" rel="noopener">
                <img src={src} alt="" loading="lazy" />
            </a>
    ))}
</div>
    )}

<style>
    /* … your existing grid styles … */
    .album-embed{position:relative;padding-top:62.5%}
    .album-embed iframe{position:absolute;inset:0;border:0;width:100%;height:100%}
    .fallback{margin-top:.5rem}
</style>
