---
import logo from "../assets/logo.png";
const base = import.meta.env.BASE_URL;
const items = [
    { href: `${base}services/`, label: "Services" },
    { href: `${base}gallery/`,  label: "Gallery" },   // keep if you still want a generic page
    { href: `${base}projects/`, label: "Projects" },
    { href: `${base}contact/`,  label: "Contact" },
];
// Service submenu labels must match the slugs in data/services.ts
const serviceSubs = [
    { href: `${base}services/kitchens-baths/`, label: "Kitchens & Baths" },
    { href: `${base}services/framing-drywall/`, label: "Framing & Drywall" },
    { href: `${base}services/decks-exterior/`,  label: "Decks & Exterior" },
    { href: `${base}services/concrete/`,        label: "Concrete" },
];
---

<nav class="nav">
    <a class="logo" href={base}><img src={logo.src} alt="KIL Construction" /></a>

    <details class="menu">
        <summary>Services</summary>
        <ul>
            {serviceSubs.map(s => <li><a href={s.href}>{s.label}</a></li>)}
        </ul>
    </details>

    <a href={`${base}projects/`}>Projects</a>
    <a href={`${base}gallery/`}>Gallery</a>
    <a href={`${base}contact/`}>Contact</a>

    <a class="btn" href="tel:+1-715-279-1241">Call Now</a>
</nav>

<style>
    .nav { display:flex; gap:18px; align-items:center; justify-content:space-between; }
    .logo img { height:44px; display:block; }
    .menu { position:relative; }
    .menu summary { list-style:none; cursor:pointer; }
    .menu[open] summary { opacity:0.85; }
    .menu ul {
        position:absolute; top: calc(100% + 8px); left:0;
        background:#fff; border:1px solid #e6e6e6; border-radius:12px;
        padding:8px; min-width:220px; box-shadow:0 10px 24px rgba(0,0,0,.08);
    }
    .menu ul li { list-style:none; }
    .menu ul a { display:block; padding:8px 10px; text-decoration:none; color:#111; border-radius:8px; }
    .menu ul a:hover { background:#f5f7fa; }
    .btn { margin-left:auto; }
</style>
