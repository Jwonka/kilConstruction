
---
import MainLayout from "../../layout/MainLayout.astro";
import { services } from "../../data/services";
const base = import.meta.env.BASE_URL;
---

<MainLayout title="Services | KIL Construction" description="Construction services">
    <h1>Services</h1>
    <p>We handle residential & light commercial work.</p>

    <div class="cards">
        {services.map((s) => (
                <a class="card" href={`${base}services/${s.slug}/`}>
                    <h3>{s.name}</h3>
                    {s.blurb && <p>{s.blurb}</p>}
                </a>
        ))}
    </div>

    <style>
        .cards { display:grid; gap:16px; grid-template-columns: repeat(auto-fit,minmax(240px,1fr)); }
        .card { padding:16px; border:1px solid #e6e6e6; border-radius:12px; text-decoration:none; color:inherit; }
        .card:hover { border-color:#cfd3d8; background:#fafbfc; }
    </style>
    <script src="/js/rotator.js?v=13" defer></script>
    <script src="/js/grid-enhancer.js?v=6" defer></script>
</MainLayout>
