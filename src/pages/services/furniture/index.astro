---
import MainLayout from "../../../layout/MainLayout.astro";
import ProjectCard from "../../../components/ProjectCard.astro";
import "../../../styles/global.css";
import "../../../styles/projects.css";
import {services} from "../../../data/services.ts";

const service =
    services.find((s) => s.slug === "furniture") ?? {
        slug: "furniture",
        name: "Custom Furniture",
        blurb: "",
        description: "",
    };

const { env } = Astro.locals.runtime;
const GALLERY_WORKER = env?.GALLERY_WORKER as Fetcher | undefined;
if (!GALLERY_WORKER) throw new Error("Missing service binding: GALLERY_WORKER");

type AlbumFromApi = {
    slug: string;
    name: string;
    summary?: string;
    year?: string;
    location?: string;
    previews?: { thumb?: string; full?: string }[];
    images?: { thumb?: string; full?: string };
};

type Card = {
    p: {
        slug: string;
        name: string;
        summary?: string;
        year?: string;
        location?: string;
    };
    first?: { name?: string; url?: string } | string;
    src?: string;
    rotList: string[];
};

type ListResponse = {
    furniture?: AlbumFromApi[];
    projects?: AlbumFromApi[];
};

let cards: Card[] = [];
let loadError: string | null = null;

async function workerFetchJsonWithRetry(binding: any, url: string, tries = 2): Promise<Response | null> {
    let last: Response | null = null;
    for (let i = 0; i < tries; i++) {
        try {
            const req = new Request(url, {
                method: "GET",
                headers: {
                    Accept: "application/json",
                    "Cache-Control": "no-store",
                    Pragma: "no-cache",
                },
                // @ts-expect-error: Cloudflare supports this in Workers
                cf: { cacheTtl: 0, cacheEverything: false },
            });
            const res = await binding.fetch(req);
            last = res;
            const ct = res.headers.get("content-type") || "";
            if (res.ok && ct.includes("application/json")) return res;
        } catch {
            // retry
        }
        await new Promise((r) => setTimeout(r, 150 * (i + 1)));
    }
    return last;
}

try {
    const res = await workerFetchJsonWithRetry(GALLERY_WORKER, "https://kilcon.work/api/gallery-api?list=furniture");
    if (!res || !res.ok) {
        loadError = "Failed to load furniture.";
    } else {
        const json = (await res.json()) as ListResponse;
        const albums = json.furniture ?? json.projects ?? [];
        cards = albums.map((proj) => {
            const previews = proj.previews ?? [];
            const firstPreview = previews[0];
            const cover =
                proj.images?.thumb ||
                proj.images?.full ||
                firstPreview?.thumb ||
                firstPreview?.full;
            const rotList = previews
                .map((p) => p.thumb || p.full)
                .filter((u): u is string => !!u);
            return {
                p: {
                    slug: proj.slug,
                    name: proj.name,
                    summary: proj.summary,
                    year: proj.year,
                    location: proj.location,
                },
                first: firstPreview
                    ? {
                        name: firstPreview.full?.split("/").pop() ?? "",
                        url: firstPreview.thumb || firstPreview.full,
                    }
                    : undefined,
                src: cover,
                rotList,
            };
        });
    }
} catch {
    loadError = "Failed to load furniture.";
}

function hasUrl(x: unknown): x is { url: string } {
    return !!x && typeof (x as any).url === "string";
}
---

<MainLayout
        title={`${service.name} | KIL Construction`}
        description={service.seoDescription || service.description || service.blurb || "KIL Construction custom furniture in Mondovi, WI."}
        ogDescription={service.ogDescription || service.blurb}
        twitterDescription={service.ogDescription || service.blurb}
>
    <Fragment slot="head">

        {(() => {
            const withWidth = (u: string, w: number): string =>
                u.replace(
                    /\/cdn-cgi\/image\/width=\d+/,
                    `/cdn-cgi/image/width=${w}`
                );

            return cards.slice(0, 6).map((c) => {
                if (!c.src) return null;

                return (
                    <link
                        rel="preload"
                        as="image"
                        href={withWidth(c.src, 600)}
                        imagesrcset={`${withWidth(c.src, 600)} 600w, ${withWidth(c.src, 1200)} 1200w, ${withWidth(c.src, 2000)} 2000w`}
                        imagesizes="680px"
                    />
                );
            });
        })()}
    </Fragment>

    <h1 class="page-head container">{service.name}</h1>
    <p class="section-intro-strong">{service.blurb}</p>
    <p class="section-intro" set:html={service.description}/>

    <section class="container page-section">
        {loadError && (
            <p class="status status--error">
                Couldn’t load {service.name.toLowerCase()} albums right now. Please try again later.
            </p>
        )}

        {!loadError && cards.length === 0 && (
            <p class="status status--empty">
                No {service.name.toLowerCase()} albums yet. Check back soon.
            </p>
        )}

        {!loadError && cards.length > 0 && (
            <div class="grid grid--projects">
                {cards.map((c, i) => (
                    <ProjectCard
                        p={c.p}
                        first={c.first}
                        src={c.src}
                        rotList={c.rotList}
                        eager={i < 4}
                        cover={c.src ?? (hasUrl(c.first) ? c.first.url : undefined)}
                        baseHref="/services/furniture"
                    />
                ))}
            </div>
        )}
    </section>
    <div class="cta-div">
        <p class="section-cta container">Ready to talk about your project?</p>
        <p class="section-cta container">
            <a href="/contact" class="inline-link">Contact us</a> and we’ll schedule a time to look at your space and provide an estimate.
        </p>
    </div>
    <script src="/js/rotator.js?v=14" defer></script>
    <script src="/js/grid-enhancer.js?v=7" defer></script>
</MainLayout>
