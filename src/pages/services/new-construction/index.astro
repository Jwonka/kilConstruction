---
import MainLayout from "../../../layout/MainLayout.astro";
import ProjectCard from "../../../components/ProjectCard.astro";
import "../../../styles/global.css";
import "../../../styles/projects.css";
import {services} from "../../../data/services.ts";

const service =
    services.find((s) => s.slug === "new-construction") ?? {
        slug: "new-construction",
        name: "New Construction",
        blurb: "",
        description: "",
    };
const PROD_ORIGIN = Astro.site?.origin || "https://kilcon.work";
const API_BASE = import.meta.env.DEV ? "https://kilcon.work" : PROD_ORIGIN;
const API = new URL("/api/gallery-api", API_BASE);

type AlbumFromApi = {
    slug: string;
    name: string;
    summary?: string;
    year?: string;
    location?: string;
    previews?: { thumb?: string; full?: string }[];
    images?: { thumb?: string; full?: string };
};

type Card = {
    p: {
        slug: string;
        name: string;
        summary?: string;
        year?: string;
        location?: string;
    };
    first?: { name?: string; url?: string } | string;
    src?: string;
    rotList: string[];
};

type ListResponse = {
    ["new-construction"]?: AlbumFromApi[];
    projects?: AlbumFromApi[];
};

let cards: Card[] = [];
let loadError: string | null = null;

try {
    const u = new URL(API);
    u.searchParams.set("list", "new-construction");

    let res = await fetch(u, { cache: "no-store" });

    // fallback if worker doesn’t recognize list=new-construction yet
    if (!res.ok || res.status === 404) {
        const fallback = new URL("/api/gallery-api?list=new-construction", "https://kilcon.work");
        res = await fetch(fallback, { cache: "no-store" });
    }

    if (res.ok && res.headers.get("content-type")?.includes("application/json")) {
        const json = (await res.json()) as ListResponse;
        const albums = json["new-construction"] ?? json.projects ?? [];

        cards = albums.map((proj) => {
            const previews = proj.previews ?? [];
            const firstPreview = previews[0];

            const cover =
                proj.images?.thumb ||
                proj.images?.full ||
                firstPreview?.thumb ||
                firstPreview?.full;

            const rotList = previews
                .map((p) => p.thumb || p.full)
                .filter((u): u is string => !!u);

            return {
                p: {
                    slug: proj.slug,
                    name: proj.name,
                    summary: proj.summary,
                    year: proj.year,
                    location: proj.location,
                },
                first: firstPreview
                    ? {
                        name: firstPreview.full?.split("/").pop() ?? "",
                        url: firstPreview.thumb || firstPreview.full,
                    }
                    : undefined,
                src: cover,
                rotList,
            };
        });
    } else {
        loadError = "Failed to load new construction albums.";
    }
} catch {
    loadError = "Failed to load new construction albums.";
}

function hasUrl(x: unknown): x is { url: string } {
    return !!x && typeof (x as any).url === "string";
}
---

<MainLayout
        title={`${service.name} | KIL Construction`}
        description={service.seoDescription || service.description || service.blurb || "KIL Construction services in Mondovi, WI."}
        ogDescription={service.ogDescription || service.blurb}
        twitterDescription={service.ogDescription || service.blurb}
>
    <Fragment slot="head">
        <link rel="preconnect" href="https://kilcon.work" crossorigin />

        {(() => {
            const withWidth = (u, w) =>
                u.replace(/\/cdn-cgi\/image\/width=\d+/, `/cdn-cgi/image/width=${w}`);

            return cards.slice(0, 6).map((c) => {
                if (!c.src) return null;

                return (
                    <link
                        rel="preload"
                        as="image"
                        href={withWidth(c.src, 600)}
                        imagesrcset={`${withWidth(c.src, 600)} 600w, ${withWidth(c.src, 1200)} 1200w, ${withWidth(c.src, 2000)} 2000w`}
                        imagesizes="680px"
                    />
                );
            });
        })()}
    </Fragment>

    <h1 class="page-head container">{service.name}</h1>
    <p class="section-intro-strong">{service.blurb}</p>
    <p class="section-intro" set:html={service.description}/>

    <section class="container page-section">
        {loadError && (
            <p class="status status--error">
                Couldn’t load {service.name.toLowerCase()} albums right now. Please try again later.
            </p>
        )}

        {!loadError && cards.length === 0 && (
            <p class="status status--empty">
                No {service.name.toLowerCase()} albums yet. Check back soon.
            </p>
        )}

        {!loadError && cards.length > 0 && (
            <div class="grid grid--projects">
                {cards.map((c, i) => (
                    <ProjectCard
                        p={c.p}
                        first={c.first}
                        src={c.src}
                        rotList={c.rotList}
                        eager={i < 4}
                        cover={c.src ?? (hasUrl(c.first) ? c.first.url : undefined)}
                        baseHref="/services/new-construction"
                    />
                ))}
            </div>
        )}
    </section>
    <div class="cta-div">
        <p class="section-cta container">Ready to talk about your project?</p>
        <p class="section-cta container">
            <a href="/contact" class="inline-link">Contact us</a> and we’ll schedule a time to look at your space and provide an estimate.
        </p>
    </div>
    <script src="/js/rotator.js?v=13" defer></script>
    <script src="/js/grid-enhancer.js?v=6" defer></script>
</MainLayout>

