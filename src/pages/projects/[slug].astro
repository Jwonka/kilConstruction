---
import "../../styles/global.css";
import { projects } from "../../data/projects";

export function getStaticPaths() {
    return projects.map((p) => ({
        params: { slug: p.slug },
        props: { project: p },
    }));
}

const { project } = Astro.props;
export const prerender = true;
---
<main class="container">
    <h1>{project.name}</h1>
    {project.location && <p>{project.location}{project.year ? ` Â· ${project.year}` : ""}</p>}

    {project.images?.length ? (
            <div class="grid">
                {project.images.map((src) => <img src={src} alt={project.name} loading="lazy" />)}
            </div>
    ) : (
            <p>No images yet.</p>
    )}
</main>

