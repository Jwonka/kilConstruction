        font-size: 0.95rem;
    }

    .btn-small {
        padding: 8px 14px;
        border-radius: 999px;
        border: none;
        font-size: 0.9rem;
        background: #111827;
        color: #f9fafb;
        cursor: pointer;
    }

    .btn-small:disabled {
        opacity: 0.6;
        cursor: default;
    }

    .btn-danger {
        border-color: #f97373;
        color: #b91c1c;
        background: #fef2f2;
    }

    .btn-danger:hover:not(:disabled) {
        background: #fee2e2;
    }

    .status-row {
        font-size: 0.85rem;
        color: #6b7280;
        margin-bottom: 10px;
    }

    .results-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .result-item {
        border-bottom: 1px solid rgba(15, 23, 42, 0.04);
        padding: 0.5rem 0;
    }

    .result-title {
        font-size: 0.95rem;
        font-weight: 500;
        color: #111827;
    }

    .result-meta {
        font-size: 0.8rem;
        color: #6b7280;
    }

    .result-actions {
        display: flex;
        gap: 8px;
    }

    .btn-pill {
        padding: 6px 12px;
        border-radius: 999px;
        border: 1px solid #d1d5db;
        font-size: 0.85rem;
        text-decoration: none;
        color: #111827;
        background: #f9fafb;
    }

    .btn-pill:hover {
        background: #e5e7eb;
    }

    .empty {
        font-size: 0.9rem;
        color: #6b7280;
        padding: 8px 2px;
    }

    .result-item.active {
        border-color: #3b82f6;
        background: #eff6ff;
    }

    /* --- Tree layout: caret left, label center, checkbox right --- */
    /* strip bullets everywhere */
    .results-list,
    .results-list li,
    .children-list,
    .children-list li {
        list-style: none !important;
        margin: 0;
        padding: 0;
    }

    /* folder row */
    .item-header {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 4px 0;
        gap: 0.5rem;
    }

    .expand-btn {
        border: none;
        background: transparent;
        cursor: pointer;
        font-size: 0.9rem;
        width: 1.5rem;
        flex-shrink: 0;
        display: inline-flex;
        justify-content: center;
    }

    .item-text {
        flex: 1;
        text-align: center;
    }

    .select-checkbox {
        flex-shrink: 0;
    }

    /* children list (files under a folder) */
    .children-list {
        margin: 0.25rem 0 0.5rem 2.25rem;
        padding: 0;
        border-left: 1px dashed #e5e7eb;
    }

    /* file rows */
    .child-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.25rem 0;
        border-bottom: 1px dashed #e5e7eb;
    }

    .child-item:last-child {
        border-bottom: none;
    }

    .child-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .child-item input[type="checkbox"] {
        margin-left: 0.5rem; /* push checkbox slightly to the right edge */
    }

    /* name + meta */
    .image-name {
        font-size: 0.9rem;
        color: #111827;
        word-break: break-all;
    }

    .image-meta {
        font-size: 0.75rem;
        color: #6b7280;
    }

</style>

