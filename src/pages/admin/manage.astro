---
import AdminLayout from "../../layout/AdminLayout.astro";

const cookies = Astro.cookies;
const auth = cookies.get("admin_auth")?.value;

if (auth !== import.meta.env.ADMIN_SECRET) {
    return new Response(null, {
        status: 302,
        headers: { Location: "/admin/login" },
    });
}
---

<AdminLayout title="Manage Uploaded Files">
    <h1 class="admin-title">Manage Uploaded Files</h1>

    <p style="margin-bottom: 1.5rem; color:#4b5563; text-align:center;">
        This will become your simple file manager: browse folders, rename projects,
        and remove images from the gallery.
    </p>

