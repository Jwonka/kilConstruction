        border-radius: 18px;
        border: 1px solid #e5e7eb;
        padding: 16px;
        background: #f9fafb;
    }

    .toolbar {
        display: flex;
        gap: 10px;
        margin-bottom: 12px;
        flex-wrap: wrap;
    }

    .toolbar-actions {
