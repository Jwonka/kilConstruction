---
import "../styles/global.css";
import logo from "../assets/logo.png";
import Nav from "../components/Nav.astro";
const { title = "KIL Construction", description = "Quality construction & contracting." } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href={logo.src} />
</head>
<body>
<header class="header"><div class="container"><Nav /></div></header>

<main class="container">
    <slot />
</main>

<footer class="footer">
    <div class="container">
        © {new Date().getFullYear()} KIL Construction · Licensed & Insured · Serving The Mondovi Area
    </div>
</footer>
</body>
</html>
